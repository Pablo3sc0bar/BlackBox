@model IEnumerable<BlackBox.Entities.ProductAdditionals.Jenre>
@{
    Layout = "_AdminLayout";
}

<a class="badge badge-primary" href="@Url.Action("AddJenre")">Добавить жанр</a>

<h2>Список жанров:</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Название</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var jenre in Model){
            <tr>
                <th scope="row">@jenre.ID</th>
                <td>@jenre.Name</td>
                <td>
                    @Html.ActionLink("Изменить", "EditJenre", new { id=jenre.ID }) |
                    @Html.ActionLink("Удалить", "DeleteJenre", new { id=jenre.ID }) 
                </td>
            </tr>
        }
    </tbody>
</table>