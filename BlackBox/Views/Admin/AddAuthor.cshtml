@model BlackBox.Entities.ProductAdditionals.Author
@{
    Layout = "_AdminLayout";
}

<div class="container">
    <h2>Добавление автора:</h2>
    <br />
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">ФИО автора</label>
            <input asp-for="Name" class="form-control" placeholder="Пупкин Петр Павлович">
        </div>
        <div class="form-group">
            <label asp-for="ImageLink">Ссылка на фото</label>
            <input asp-for="ImageLink" class="form-control" placeholder="hhtp://tagduck.jpg">
        </div>
        <div class="form-group">
            <label asp-for="Description">Описание автора</label>
            <textarea asp-for="Description" class="form-control" placeholder="Он был хорош"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>